<table>
    <tr>
        <th>id</th>
        <th>name</th>
        <th>year</th>
        <th>rank</th>
    </tr>
    {{#each tuple}}
        <tr>
            <td> {{ this.id }} </td>
            <td> {{ this.name }} </td>
            <td> {{ this.year }} </td>
            <td> {{ this.rank }} </td>
        </tr>
    {{/each}}
    
</table>

<div class="box">
	<h1>IMDB Movie Database</h1>
	
	<table class="display">
        <tr>
            <th>ID No.</th>		
            <th>Name</th>
            <th>Year</th>
            <th>Rank</th>
        </tr>
        <tr> <!-- Display Movie Searched -->
            <td id="display-id">Sample ID Number</td>
            <td id="display-name">Sample Movie Name</td>
            <td id="display-year">Sample Movie Year</td>
            <td id="display-rank">Sample Movie Rank</td>
        </tr>		
	</table>

    <form action="/search">
        <table>
            <tr>                
                <td colspan="2">
                    <label>Search Movie:</label>
                </td>               
            </tr>
            <tr>
                <td>
                    <input type="text" name="id" id="id" placeholder="Type Movie ID here">
                </td>  
                <td>
                    <select name="isolationLevel" class="isolation-dropdown">
                        <option value="READ UNCOMMITTED">Read Uncommitted</option>
                        <option value="READ COMMITTED">Read Committed</option>
                        <option value="REPEATABLE READ">Repeatable Reads</option>
                        <option value="SERIALIZABLE">Serializable</option>
                    </select>	
                </td>                                            
            </tr>
            <tr>                   
                <td colspan="2">
                    <input type="hidden" name="pool" value="3">
                    <input class="tick" type="checkbox" name="pool" value="2">
                    <p> Search in Archive </p>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                <input type="submit" value="Search"></button>
                </td>                      
            </tr>                
        </table>              
    </form>

	<form action="/insert">
        <table>
            <tr>
                <td colspan="2">
                <label>Insert Movie:</label>
                </td>
            </tr>
            <tr>
                <td>
                    <input name="name" type="text" placeholder="Type Movie Name here">
                </td>
                <td>
                    <input name="year" type="text" placeholder="Type Movie Year here">
                </td>
                </tr>
            <tr>
                <td>
                    <input name="rank" type="text" placeholder="Type Movie Rank here">  
                </td>
                <td>
                    <select name="isolationLevel" class="isolation-dropdown">
                        <option value="READ UNCOMMITTED">Read Uncommitted</option>
                        <option value="READ COMMITTED">Read Committed</option>
                        <option value="REPEATABLE READ">Repeatable Reads</option>
                        <option value="SERIALIZABLE">Serializable</option>
                    </select>	
                </td>                    
            </tr>
            <tr>                    
                <td colspan="2">
                    <input type="submit" value="Insert"></button>
                </td>                                      
            </tr> 
        </table>
    </form>
        
    <form action="/update">
        <table>
            {{#each tuple}}
            <tr>
                <td colspan="2">
                <label>Update Movie:</label>
                </td>
            </tr>
            <tr>
                <td>
                <input name="id" type="text" value="{{this.id}}" placeholder="Movie ID" readonly>
                </td>                    
                <td>
                    <input name="name" type="text" value="{{this.name}}" placeholder="Type Movie Name here">
                </td>
            </tr>                  
            <tr>
                <td>
                    <input name="year" type="text" value="{{this.year}}" placeholder="Type Movie Year here">
                </td>                    
                <td>
                    <input name="rank" type="text" value="{{this.rank}}" placeholder="Type Movie Rank here">	
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <select name="isolationLevel" class="isolation-dropdown">
                        <option value="READ UNCOMMITTED">Read Uncommitted</option>
                        <option value="READ COMMITTED">Read Committed</option>
                        <option value="REPEATABLE READ">Repeatable Reads</option>
                        <option value="SERIALIZABLE">Serializable</option>
                    </select>                        
                </td>                    
            </tr>
            <tr>                  
                <td colspan="2">
                    <input type="submit" value="Update"></button>
                </td>
            </tr>
            {{/each}}
        </table>
    </form>
</div>	

